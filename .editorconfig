# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2

[.clang-format]
indent_style = space

[*.{c,cpp,h,hpp,cc,hh}]
indent_style = tab

[*.{md,yml,yaml}]
indent_style = space
